<%- include ('../partials/header'); -%> 
  

<div class="container">
    <header class="jumbotron">
        <h1> Welcome to YelpCamp</h1>
        <div class="container">
            <p>View our hand-pick campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary  btn-large" href="/campgrounds/new">Add new campgrounds</a>
            </p>
        </div>
    </header>
    <div class="row text-center" style="display: flex; flex-wrap:wrap">
        <% for(var i = 0; i < varCamp.length; i++){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img width="100%" height="200px" src="<%= varCamp[i]['image'] %>" alt="">
                <div class="caption">
                    <p><%= varCamp[i]['name'] %></p>
            
                </div>
                <p>
                    <a href="/campgrounds/<%- varCamp[i]._id %>" class="btn btn-primary">More info</a>
                    <!-- I don't know why but varCamp._id does not work but varCamp[i]._id -->
                    <!-- Now I understand, it is because I used a for loop -->
                </p>
            </div>
        </div>
        <%}%>
</div>
</div>
      <%- include ('../partials/footer'); -%> 

     