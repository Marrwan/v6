<%- include ('../partials/header') %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new campground</h1>
        <div style="width: 30%; margin:30px auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Camp name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" placeholder="camp image url" name="url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Mosque description " name="description">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-success btn-block" type="submit">
                </div>
            </form>
            <a href="/campgrounds"> Go Back</a>
        </div>
    </div>
</div>
<%- include ('../partials/footer') %>